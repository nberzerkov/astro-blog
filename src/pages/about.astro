---
import BaseLayout from "../layout/BaseLayout.astro";
const aboutTitle = "about";

const identity = {
  myName: "Enduraev",
  country: "любимой России в Ханты-Мансийском автономном округе — Югра",
  occupation: "QA Engineer",
  hobbies: ["код", "читать", "воркаут"],
};

const skills = ["HTML", "CSS", "JavaScript", "React", "Astro", "Markdown"];

const happy = true;
const finished = false;
const goal = 3;

const headerColor = "purple";
const headerFontSize = "4rem";
const skillColor = "navy";
const fontWeight = "bold";
const textCase = "uppercase";

const styles = {
  headerColor,
  headerFontSize,
  skillColor,
  fontWeight,
  textCase,
};
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{aboutTitle}</title>

    <style define:vars={styles}>
      h1 {
        color: var(--headerColor);
        font-size: var(--headerFontSize);
      }
      .skill {
        color: var(--skillColor);
        font-weight: var(--fontWeight);
        text-transform: var(--textCase);
      }
    </style>
  </head>
  <body>
    <BaseLayout pageTitle={aboutTitle}>
      <h3>Интересуюсь всем и делюсь этим с миром</h3>
      <p>Here are a few facts about me:</p>
      <ul>
        <li>My name is {identity.myName}.</li>
        <li>
          I live in {identity.country} and I work as a {identity.occupation}.
        </li>
        {
          identity.hobbies.length >= 2 && (
            <li>
              Two of my hobbies are: {identity.hobbies[0]} and
              {identity.hobbies[1]}
            </li>
          )
        }
      </ul>
      <p>My skills are:</p>
      <ul>
        {skills.map((skill) => <li class="skill">{skill}</li>)}
      </ul>

      {happy && <p>I am happy to be learning Astro!</p>}

      {finished && <p>I finished this tutorial!</p>}

      {
        goal === 3 ? (
          <p>My goal is to finish in 3 days.</p>
        ) : (
          <p>My goal is not 3 days.</p>
        )
      }
    </BaseLayout>
  </body>
</html>
